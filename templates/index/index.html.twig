{% extends 'layout/front.html.twig' %}

{% block title %}Welcome to Blogly
{% endblock %}

{% block content %}

	{{ include('index/new_feed.html.twig') }}

	{% for feed in feeds %}
		<div class="card mb-2">
			<img src="{{ feed.image ? asset('uploads/images/' ~ feed.image) : asset('images/default-image.jpg') }}" class="card-img-top" alt="{{ feed.image }}" style="max-height: 300px; object-fit:cover;">
			<div class="card-body">
				<h5 class="card-title"><a href=" {{ path('blogly_feed_show', {id: feed.id })}}">{{ feed.title|post_title }}</a></h5>
				<p class="card-text">{{ feed.description|post_description }}</p>
			</div>
		</div>
	{% endfor %}
{% endblock %}
